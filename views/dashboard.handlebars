<main>
    <h1>Create a New Post</h1>
  <div class="row">
    <form class="col s12" id="blogpost-form">
      <div class="row">
        <div class="input-field col s12">
          <textarea id="titleText" class="materialize-textarea"></textarea>
          <label for="titleText">Enter Title</label>
        </div>
        <div class="input-field col s12">
          <textarea id="articleText" class="materialize-textarea"></textarea>
          <label for="articleText">start writing...</label>
      </div>
      <a id="createPostBtn"class="waves-effect waves-light btn">publish post</a>
    </form>
  </div>
  <br>

  {{#if blogPosts.length}}
  <section>

    <h1>Your Posts</h1>

<ul>
{{#each blogPosts}} <li>
{{!-- {{> blogpost-details}} --}}

<div class="row">
  <div class="col s12 ">
    <a  id ="card-homepage-link"href="/blogposts/{{id}}">
    <div class="card-panel teal hoverable">
      <h4 class="details-card-title white-text">{{title}}</h4>
      <span class="card-article white-text">{{article}}</span>
      <p class="card-author white-text">Authored by:{{user.username}} on 
        {{format_date createdAt}}
        </p>
    
      </a>
 
    </div>
         <a
          id="card-homepage-link"
          href="/dashboard/edit/{{id}}"
          class="waves-effect waves-light btn"
        >Edit</a>
  </div>
</div>

</li>
<br>

{{/each}}

</ul>
 {{else}}
 <h1>You have no Posts!</h1>
 </section>
  {{/if}}
  </main>

  <script src="/js/add-post.js"></script>